pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh 'javac -encoding UTF-8 -d classes May21/src/**/*.java'
            }
        }
        stage('Test') {
            steps {
				sh 'java -cp classes:May21/lib/junit-platform-console-standalone-1.7.1.jar org.junit.platform.console.ConsoleLauncher --scan-classpath > test_results.txt'            }
        }


    }
    post {
        always {
            archiveArtifacts 'test_results.txt'
            emailext (
     			subject: "ğŸ”” í…ŒìŠ¤íŠ¸: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
      			body: "ì´ ë©”ì¼ì€ ë¬´ì¡°ê±´ ë³´ë‚´ì§‘ë‹ˆë‹¤.",
      			to: 'ls010507@naver.com',
      			mimeType: 'text/plain'
    		)
        }
        failure {
            echo 'Build or test failed'
            emailext (
            	subject: " Build ì‹¤íŒ¨: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
            	body: """\
					ì›ì¸ í™•ì¸ì´ í•„ìš”í•©ë‹ˆë‹¤.
					ë¡œê·¸: ${env.BUILD_URL}
            		""".stripIndent(),
            	to: "ls010507naver.com"
        	)
        }
        success {
            echo 'Build and test succeeded'
            emailext (
            	subject: "Build ì„±ê³µ: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
            	body: """\
                	ë¹Œë“œ ì„±ê³µ!
                	ê²°ê³¼ íŒŒì¼ í™•ì¸: ${env.BUILD_URL}artifact/test_results.txt
                	ë¹Œë“œ URL: ${env.BUILD_URL}
            		""",
            	to: "ls010507@naver.com"
        	)
        }
    }
}
