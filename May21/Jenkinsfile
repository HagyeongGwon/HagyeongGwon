pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh 'javac -encoding UTF-8 -d classes May21/src/**/*.java'
            }
        }
        stage('Test') {
            steps {
				sh 'java -cp classes:May21/lib/junit-platform-console-standalone-1.7.1.jar org.junit.platform.console.ConsoleLauncher --scan-classpath > test_results.txt'            }
        }


    }
    post {
        always {
            archiveArtifacts 'test_results.txt'
            emailext (
     			subject: "π”” ν…μ¤νΈ: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
      			body: "μ΄ λ©”μΌμ€ λ¬΄μ΅°κ±΄ λ³΄λ‚΄μ§‘λ‹λ‹¤.",
      			to: 'ls010507@naver.com',
    		)
        }
        failure {
            echo 'Build or test failed'
            emailext (
            	subject: " Build μ‹¤ν¨: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
            	body: "
					μ›μΈ ν™•μΈμ΄ ν•„μ”ν•©λ‹λ‹¤.
					μ§μ ‘ κ°€μ„ ν™•μΈν•μ„Έμ”.
            		",
            	to: "ls010507naver.com"
        	)
        }
        success {
            echo 'Build and test succeeded'
            emailext (
            	subject: "Build μ„±κ³µ: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
            	body: "
                	λΉλ“ μ„±κ³µ!
                	λΉλ“ λ‚΄μ©μ€ μ§μ ‘ κ°€μ„ ν™•μΈν•μ„Έμ”.
            		",
            	to: "ls010507@naver.com"
        	)
        }
    }
}
